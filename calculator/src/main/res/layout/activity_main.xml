<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/simple_caluculator"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:lines="3"
                android:gravity="right|bottom"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="5"
                    android:columnCount="4">

                    <Button
                        android:id="@+id/bt_cancel"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="CE"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_chu"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="/"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_cheng"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="×"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_clear"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="C"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_7"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="7"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_8"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="8"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_9"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="9"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_jia"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="+"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="4"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_5"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="5"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_6"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="6"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>

                    <Button
                        android:id="@+id/bt_jian"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="@dimen/button_font_size" />

                    <Button
                        android:id="@+id/bt_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="1"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="2"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="3"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_genhao"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="根号"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_daoshu"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="1/X"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_0"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="0"
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_point"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="."
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/bt_result"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height"
                        android:layout_columnWeight="1"
                        android:text="="
                        android:gravity="center"
                        android:textSize="@dimen/button_font_size"
                        android:textColor="@color/black"/>


                </GridLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>